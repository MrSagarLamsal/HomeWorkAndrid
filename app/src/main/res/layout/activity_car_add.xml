<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarAdd"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type and Run "
        android:textSize="30dp"
        android:id="@+id/top"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make:"
        android:layout_below="@id/top"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/tv_make"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:layout_below="@id/tv_make"
        android:id="@+id/et_make"
        android:layout_marginBottom="5dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Year:"
        android:textSize="20dp"
        android:layout_below="@id/et_make"
        android:id="@+id/tv_year"
        android:layout_marginLeft="15dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_year"
        android:layout_below="@id/tv_year"
        android:layout_marginBottom="5dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color:"
        android:textSize="20dp"
        android:layout_below="@id/et_year"
        android:id="@+id/tv_color"
        android:layout_marginLeft="15dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_color"
        android:layout_below="@id/tv_color"
        android:layout_marginBottom="5dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purchase:"
        android:textSize="20dp"
        android:layout_below="@id/et_color"
        android:id="@+id/tv_purchase"
        android:layout_marginLeft="15dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_purchase"
        android:layout_below="@id/tv_purchase"
        android:layout_marginBottom="5dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Engine size(litre):"
        android:textSize="20dp"
        android:layout_below="@id/et_purchase"
        android:id="@+id/tv_engine"
        android:layout_marginLeft="15dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_engine"
        android:layout_below="@id/tv_engine"
        android:layout_marginBottom="5dp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE CAR"
        android:id="@+id/btn_createcar"
        android:layout_below="@id/et_engine"
        android:background="#9696eb"
        android:layout_marginLeft="60dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE DIESEL"
        android:id="@+id/btn_creatediesel"
        android:layout_below="@id/et_engine"
        android:layout_marginLeft="50dp"
        android:background="#9696eb"
        android:layout_toRightOf="@id/btn_createcar"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_createcar"

        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display"
        android:layout_marginLeft="15dp"

        android:textColor="@android:color/black"/>

    </ScrollView>




</RelativeLayout>